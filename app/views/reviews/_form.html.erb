<%# This is a partial view for the review form.
    It's designed to be rendered within another view (like products/show).
    The `product` and `review` variables are passed in when rendering. %>

<%= form_with model: [product, review], local: true do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rating %>
    <%# A simple dropdown for star rating %>
    <%= form.select :rating, options_for_select((1..5).to_a), prompt: 'Select a rating' %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit "Submit Review" %>
  </div>
<% end %>
